{
	"manifest_version": 3,
	"name": "Wave",
	"description": "A simple and beautiful pomodoro app to keep you focused",
	"version": "1.0",
	"permissions": ["alarms", "notifications", "storage"],
	"background": {
		"service_worker": "./background.js"
	},
	"action": {
		"default_title": "Wave",
		"default_popup": "index.html",
		"default_icon": {
			"32": "toolbar-icon-32.png"
		}
	},
	"icons": {
		"128": "icon-128.png"
	}
}

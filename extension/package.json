{
	"name": "wavefocus-extension",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"check": "tsc",
		"build:assets": "mkdir -p dist/assets && cp ../assets/extension/*.png dist/assets/",
		"build:background": "vite build --config vite.background.config.ts",
		"build:popup": "vite build",
		"build": "run-p check build:popup build:background build:assets",
		"gen:v3": "mv dist/manifestv3.json dist/manifest.json",
		"gen:safari": "xcrun safari-web-extension-converter --project-location ./safari dist",
		"preview": "vite preview"
	},
	"dependencies": {
		"npm-run-all": "^4.1.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.0.0",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@types/webextension-polyfill": "^0.9.2",
		"@vitejs/plugin-react": "^3.0.0",
		"autoprefixer": "^10.4.13",
		"firebase": "^9.15.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.2",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"webextension-polyfill": "^0.10.0"
	}
}
